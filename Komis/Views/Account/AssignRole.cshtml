<h2>Przypisywanie roli</h2>

@using (Html.BeginForm("AssignRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Przypisz rolę</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("", "Wybierz rolę", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name", (IEnumerable<SelectListItem>)ViewBag.RoleName, new { id = "RoleName", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("", "Wybierz użytkownika", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Username, new { id = "Username", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Przypisz"/>
        </div>
    </div>
}