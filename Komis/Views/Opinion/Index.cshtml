@model Opinion

<form asp-action="Index" method="post" class="form-horizontal" role="form">
    
    @*@<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="form-group">
        <label asp-for="Username" class="col-md-2 control-label">Nazwa użytkownika</label>
        <div class="col-md-5">
            <input asp-for="Username" class="form-control"/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">E-mail</label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Message" class="col-md-2 control-label">Wiadomość</label>
        <div class="col-md-5">
            <textarea asp-for="Message" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="WaitingForRespond" class="col-md-2 control-label">Oczekuje odpowiedzi?</label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="WaitingForRespond" class="form-control"/>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Wyślij opinię" />
            <input type="reset" class="btn btn-primary" value="Wyczyść" />
        </div>
    </div>

</form>