@model Car

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Mark" src="@Model.PhotoURL" height="500" width="500" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Mark - @Model.Model</h3>
                <h4>Cena: @Model.Price.ToString("c")</h4>
                <h4>Rok produkcji: @Model.ProductionYear</h4>
                <h4>Przebieg: @Model.Mileage</h4>
                <h4>Pojemność: @Model.TankSize</h4>
                <h4>Moc: @Model.Power</h4>
                <p>Opis: @Model.Description</p>
                <h2>Na pewno chcesz usunąć?</h2>
                <h4 class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PhotoURL" />
                        <input type="submit" value="Usuń" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-success">Powrót</a>
                    </form>
                </h4>
            </div>
        </div>
    </div>
</div>