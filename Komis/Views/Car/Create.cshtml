@model Car

<h2>Dodawanie samochodu</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="UploadFile">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label class="control-label">Zdjęcie samochodu</label><br />
                <img src="@ViewBag.ImgPath" height="300" width="350" /><br />
                <input type="file" name="file" style="margin-top: 10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Załaduj zdjęcie" class="btn btn-primary"/>
            </div>
        </form>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Mark" class="control-label">Marka</label>
                <input asp-for="Mark" class="form-control"/>
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label">Rok Produkcji</label>
                <input asp-for="ProductionYear" class="form-control"/>
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage" class="control-label">Przebieg</label>
                <input asp-for="Mileage" class="form-control"/>
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TankSize" class="control-label">Pojemność</label>
                <input asp-for="TankSize" class="form-control"/>
                <span asp-validation-for="TankSize" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FuelType" class="control-label">Rodzaj Paliwa</label>
                <input asp-for="FuelType" class="form-control"/>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power" class="control-label">Moc</label>
                <input asp-for="Power" class="form-control"/>
                <span asp-validation-for="Power" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control info"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PhotoURL" value="@ViewBag.ImgPath"/>
            <input type="hidden" asp-for="ThumbnailURL" value="@ViewBag.ImgPath"/>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsCarOfTheWeek"/> Jest samochodem tygodnia?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAvailable"/> Jest w komisie?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj samochód" class="btn btn-success" style="margin-top: 30px"/>
                <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top: 30px">Powrót</a>
            </div>
        </div>
    </form>
</div>