@model System.Collections.Generic.List<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Dostępne role</h2>

<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Utwórz nową rolę", "Create", "Role")
    </table>
</section>
<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Przypisz rolę użytkownikowi", "AssignRole", "Account")
    </table>
</section>

<table class="table table-bordered table-hover">
    <tr>
        <th class="c">
            Rola
        </th>
        <th class="c">
            Akcja
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="c">
                @item.Name
            </td>
            <td class="c">        
               <form asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id">
                    <input type="hidden" asp-for="@item.Id"/>
                    <input type="submit" class="btn btn-default" value="Usuń"/>
                </form>
            </td>
        </tr>
    }
</table>